# ✅ Binance API 金鑰設定
USE_TESTNET=true

# 測試網 API（金鑰與私鑰）
BINANCE_TEST_API_KEY=your_testnet_api_key
BINANCE_TEST_API_SECRET=your_testnet_api_secret

# 實盤 API（金鑰與私鑰）
BINANCE_LIVE_API_KEY=your_live_api_key
BINANCE_LIVE_API_SECRET=your_live_api_secret

# ✅ Webhook 密碼（TradingView 傳送時需包含）
PASSPHRASE=your_webhook_passphrase

# ✅ 預設策略參數（可由 webhook 覆蓋）
DEFAULT_CAPITAL_PCT=0.05            # 每筆策略預設使用資金比例（例如 0.05 = 5%）
DEFAULT_LEVERAGE=5                  # 預設槓桿倍數
DEFAULT_MAX_QTY=0.03                # 每筆最大下單數量限制（保底限制）
DEFAULT_MAX_SLIPPAGE_PCT=0.5        # 允許滑價容忍度（%）
DEFAULT_MAX_POSITION_USDT=1000      # 每筆最大下單金額（以 USDT 為單位）

# ✅ 總倉控管（所有策略合計最大使用比例）
MAX_TOTAL_POSITION_PCT=0.7
