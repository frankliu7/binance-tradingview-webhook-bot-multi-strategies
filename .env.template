# Binance API Keys
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Webhook 驗證密碼（TradingView 傳送時使用）
WEBHOOK_PASSPHRASE=your_passphrase_here

# 模式設定：live / testnet（testnet 將使用幣安模擬下單系統）
BINANCE_MODE=live

# 策略預設參數（可被單一策略覆寫）
DEFAULT_CAPITAL_PCT=0.05           # 每個策略預設佔用帳戶資金比例
DEFAULT_LEVERAGE=5                 # 預設槓桿倍數
DEFAULT_MAX_QTY=0.03               # 預設最大倉位數量
DEFAULT_MAX_SLIPPAGE_PCT=0.5       # 預設可接受滑價百分比

# 總體資金控管
MAX_TOTAL_POSITION_PCT=0.7         # 所有策略總持倉佔帳戶資金上限

# Dashboard 設定
DASHBOARD_PORT=8501

# Logging
LOG_PATH=log/
